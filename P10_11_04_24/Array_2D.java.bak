class Array_2D 
{
	public static void main(String[] args) 
	{
		System.out.println("Intro to 2-D Arrays in Java");

		// Array construction

		a = new int [2][];
		System.out.println(a);

		a[0] = new int[4];
		a[1] = new int[2];

		a[0] = {10, 20, 30, 40};
		a[1] = {99, 22 };

		System.out.println(a[0]);
		System.out.println(a[1]);

	}
}
